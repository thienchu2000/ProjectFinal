<div class="custom-container">
  <div
    class="custom-form-container mx-auto"
    style="width: 600px; margin-bottom:150px "
  >
    <form action="/register" method="post" style="color: black;">
      <div class="mb-3">
        <label
          for="UserName"
          class="custom-form-label"
          style="color: black;"
        >Username</label>
        <input
          type="text"
          id="UserName"
          name="UserName"
          class="custom-form-control"
          placeholder="Username"
          required
        />
      </div>
      <div class="mb-3">
        <label
          for="Email"
          class="custom-form-label"
          style="color: black;"
        >Email</label>
        <input
          type="email"
          id="Email"
          name="Email"
          class="custom-form-control"
          placeholder="Email"
          required
        />
      </div>
      <div class="mb-3">
        <label
          for="Phone"
          class="custom-form-label"
          style="color: black;"
        >Phone</label>
        <input
          type="tel"
          id="Phone"
          name="Phone"
          class="custom-form-control"
          placeholder="Phone"
          required
        />
      </div>
      <div class="mb-3">
        <label
          for="Password"
          class="custom-form-label"
          style="color: black;"
        >Password</label>
        <input
          type="password"
          id="PassWord"
          name="PassWord"
          class="custom-form-control"
          placeholder="PassWord"
          required
        />
      </div>
      <button class="custom-btn-register">Register</button>
    </form>
    <p style="text-align: center; margin-top: 15px; color: black;">or with</p>
    <a
      href="/auth/google"
      style="display: block; text-align: center; margin-top: 10px;"
    >
      <img
        src="/assets/Logo-google.png"
        alt="Google Login"
        style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;"
      />
    </a>
  </div>
</div>